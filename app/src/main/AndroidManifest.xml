        android:theme="@style/AppTheme">
        <activity android:name=".SplashCompatActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainCompatActivity"/>
        <activity android:name=".activity.sharepreference.SPCompatActivity"/>
        <activity android:name=".activity.spider.view.SpiderCompatActivity"/>
        <activity android:name=".activity.classactivity.ClassActivity"/>
        <activity android:name=".activity.reflect.ReflectActivity"/>
        <activity android:name=".activity.file.FileCompatActivity"/>
        <activity android:name=".BaseCompatActivity"/>
        <activity android:name=".activity.device.DeviceActivity"/>
        <activity android:name=".activity.ad.NoAdCompatActivity"/>
        <activity android:name=".activity.app.AppInfoCompatActivity"/>
        <activity android:name=".activity.canvas.CanvasCompatActivity"/>
        <activity android:name=".activity.widget.WidgetCompatActivity"/>
        <activity android:name=".activity.widget.MoreTextCompatActivity"/>
        <activity android:name=".activity.screen.ScreenActivity"/>
        <activity android:name=".activity.permission.PermissionActivity"/>
        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity android:name=".activity.dialog.DialogActivity">
        </activity>
    </application>

</manifest>

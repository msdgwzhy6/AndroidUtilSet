<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.smart.androidutils">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- 调用照相机相关权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- 访问闪光灯的权限 -->
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ios"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/MyFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".activity.sharepreference.SPActivity"/>
        <activity android:name=".activity.spider.view.SpiderActivity"/>
        <activity android:name=".activity.classactivity.ClassActivity"/>
        <activity android:name=".activity.reflect.ReflectActivity"/>
        <activity android:name=".activity.file.FileActivity"/>
        <activity android:name=".BaseActivity"/>
        <activity android:name=".activity.device.DeviceActivity"/>
        <activity android:name=".activity.ad.NoAdActivity"/>
        <activity android:name=".activity.app.AppInfoActivity"/>
        <activity android:name=".activity.canvas.CanvasActivity"/>
        <activity android:name=".activity.widget.WidgetActivity"/>
        <activity android:name=".activity.widget.MoreTextActivity"/>
        <activity android:name=".activity.screen.ScreenActivity"/>
        <activity android:name=".activity.permission.PActivity"/>
        <activity android:name=".activity.dialog.DialogActivity">
        </activity>
        <activity android:name=".activity.http.HttpActivity">
        </activity>
        <activity android:name=".activity.scan.ScanActivity"
                  android:launchMode="singleTop">

        </activity>
    </application>

</manifest>
